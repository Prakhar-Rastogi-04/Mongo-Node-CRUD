<h3> {{viewTitle}} </h3>

<form action="/employees" method="POST" autocomplete="off">
    <input type="hidden" name="empId" value="{{employee._id}}">
    <div class="form-group">
        <label for="">Full Name</label>
        <input type="text" class="form-control" name="fullName" id="" placeholder="Full Name" value="{{employee.fullName}}"/>
    </div>
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" name="email" id="" placeholder="email" value="{{employee.email}}"/>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="">Mobile</label>
            <input type="number" class="form-control" name="mobile" id="" placeholder="mobile" value="{{employee.mobile}}"/>
        </div>
        <div class="form-group col-md-6">
            <label for="">City</label>
            <input type="text" class="form-control" name="city" id="" placeholder="city" value="{{employee.city}}"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info"> <i class="fa fa-dabase"></i> submit</button>
            <a href="employees/list" class="btn btn-secondary"><i class="fa fa-list" aria-hidden="true"></i> View List</a>
        </div>
    </div>
    
</form>